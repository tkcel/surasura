{
  "compilerOptions": {
    "target": "ESNext",
    "module": "ESNext",
    "allowJs": true,
    "skipLibCheck": true,
    "types": ["node", "vite/client"],
    "esModuleInterop": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "outDir": "dist",
    "moduleResolution": "bundler",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "lib": ["DOM", "DOM.Iterable", "ESNext"],
    "strict": true,
    "baseUrl": ".",
    "noEmit": true,
    "paths": {
      "@/*": ["src/*"],
      "@db": ["src/db"],
      "@db/*": ["src/db/*"],
      "@main": ["src/main"],
      "@main/*": ["src/main/*"],
      "@services": ["src/services"],
      "@services/*": ["src/services/*"],
      "@utils": ["src/utils"],
      "@utils/*": ["src/utils/*"],
      "@trpc": ["src/trpc"],
      "@trpc/*": ["src/trpc/*"]
    }
  },
  "include": [
    "src/**/*",
    "tests/**/*",
    "forge.config.ts",
    "vite.*.config.mts",
    "drizzle.config.ts"
  ],
  "exclude": ["node_modules", "dist", ".vite", "out"]
}
