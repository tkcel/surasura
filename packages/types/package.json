{
  "name": "@surasura/types",
  "version": "1.0.0",
  "description": "Shared type definitions and schema generation for surasura",
  "type": "module",
  "main": "dist/index.js",
  "types": "dist/index.d.ts",
  "scripts": {
    "build": "tsc",
    "dev": "tsc --watch",
    "clean": "rm -rf dist generated",
    "generate:json-schemas": "tsx scripts/generate-json-schemas.ts",
    "generate:swift": "tsx scripts/generate-swift-models.ts",
    "generate:csharp": "tsx scripts/generate-csharp-models.ts",
    "generate:all": "pnpm run generate:json-schemas && pnpm run generate:swift && pnpm run generate:csharp",
    "lint": "eslint .",
    "type:check": "tsc --noEmit"
  },
  "keywords": [
    "surasura",
    "types",
    "schemas",
    "rpc"
  ],
  "license": "MIT",
  "devDependencies": {
    "@surasura/typescript-config": "workspace:*",
    "@surasura/eslint-config": "workspace:*",
    "eslint": "^9.26.0",
    "quicktype": "23.1.4",
    "tsx": "^4.19.4",
    "typescript": "~5.8.3",
    "zod-to-json-schema": "^3.24.5"
  },
  "dependencies": {
    "zod": "^3.24.4",
    "minimatch": "10.0.3"
  },
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "default": "./dist/index.js"
    },
    "./schemas/*": {
      "types": "./dist/schemas/*.d.ts",
      "import": "./dist/schemas/*.js",
      "default": "./dist/schemas/*.js"
    }
  }
}
